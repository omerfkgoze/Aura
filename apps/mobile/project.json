{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/mobile/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Mobile build skipped - use expo build for production builds'"
      },
      "configurations": {
        "production": {
          "command": "eas build --platform all --clear-cache"
        },
        "preview": {
          "command": "eas build --platform all --profile preview"
        }
      }
    },
    "dev": {
      "executor": "@nx/expo:start",
      "options": {
        "port": 8081
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mobile/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.json",
        "cwd": "apps/mobile"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "apps/mobile"
      }
    }
  },
  "tags": ["type:app", "scope:mobile"]
}
