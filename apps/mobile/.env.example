# Aura Mobile App - Environment Variables
# Copy this to .env.local and fill in your actual values

# =============================================================================
# EXPO/REACT NATIVE MOBILE APPLICATION ENVIRONMENT
# =============================================================================

# Environment
NODE_ENV=development
APP_VERSION=1.0.0

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_SUPABASE_URL=http://localhost:54321
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Security - Frontend accessible variables only
EXPO_PUBLIC_DEVICE_PEPPER=generate-secure-random-64-chars-here-frontend

# UX Configuration
EXPO_PUBLIC_CULTURAL_DETECTION_ENABLED=true
EXPO_PUBLIC_STEALTH_MODE_DEFAULT=false
EXPO_PUBLIC_ACCESSIBILITY_PAA_ENABLED=true
EXPO_PUBLIC_ANIMATION_REDUCED_MOTION=false

# Development
SECURITY_AUDIT_ENABLED=true

# =============================================================================
# EXPO SPECIFIC CONFIGURATION
# =============================================================================

# EAS Build configuration (optional for local development)
# EXPO_PUBLIC_EAS_PROJECT_ID=your-eas-project-id
# EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Development server configuration
# EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0