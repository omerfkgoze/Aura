{
  "name": "@aura/security-gates",
  "version": "0.1.0",
  "description": "Security validation gates for Aura app",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "fast-check": "^3.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "eslint": "^8.0.0"
  },
  "peerDependencies": {
    "@aura/shared-types": "workspace:*",
    "@aura/crypto-core": "workspace:*"
  }
}
