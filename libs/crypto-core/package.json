{
  "name": "@aura/crypto-core",
  "version": "0.1.0",
  "description": "Rust/WASM cryptographic core for Aura app",
  "main": "pkg/crypto_core.js",
  "module": "pkg/crypto_core.js",
  "types": "pkg/crypto_core.d.ts",
  "files": [
    "pkg/"
  ],
  "scripts": {
    "build": "wasm-pack build --target bundler --out-dir pkg",
    "build:web": "wasm-pack build --target web --out-dir pkg-web",
    "build:nodejs": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:all": "npm run build && npm run build:web && npm run build:nodejs",
    "build:dev": "wasm-pack build --dev --target bundler --out-dir pkg",
    "build:release": "wasm-pack build --release --target bundler --out-dir pkg && wasm-opt -O3 pkg/crypto_core_bg.wasm -o pkg/crypto_core_bg.wasm",
    "test": "wasm-pack test --headless --firefox",
    "test:chrome": "wasm-pack test --headless --chrome",
    "clean": "rm -rf pkg pkg-web pkg-node target"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aura-app/aura.git",
    "directory": "libs/crypto-core"
  },
  "keywords": [
    "rust",
    "wasm",
    "webassembly",
    "crypto",
    "encryption",
    "privacy"
  ],
  "author": "Aura Team",
  "license": "MIT",
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  },
  "peerDependencies": {
    "@types/node": "*"
  }
}
